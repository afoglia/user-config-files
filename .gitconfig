[color]
  ui = auto
[core]
  pager = less -FX
  excludesfile = ~/.gitignore
  editor = "vim +0"
[alias]
  aliases = ! git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
  ci = commit
  co = checkout
  stat = status --short --branch
  logk = log --graph --oneline --decorate --branches
  # glog command like hg's equivalent
  glog = log --graph --oneline --decorate --branches
  # git-meld from <https://github.com/wmanley/git-meld>
  meld = ! git-meld.pl
  # Conflicts alias
  conflicts = diff --name-only --diff-filter=U
  # Use dir-diff with the same name as the original script git-diffall
  diffall = difftool --dir-diff
  fix = commit --fixup # <commit>
[color "diff"]
  new = green bold
  old = red bold
  frag = magenta bold
[credential]
  helper = cache
[diff]
  tool = meld
  mnemonicprefix = true
[push]
  default = simple
[merge]
  stat = true
[rebase]
  autosquash = true
[rerere]
  enabled = 1
# # The include feature doesn't work until git 1.7.10, which isn't
# # packaged for Ubuntu 12.04
# Store system-specific config (e.g. email) in separate file
[include]
  path = ~/.gitconfig.local
